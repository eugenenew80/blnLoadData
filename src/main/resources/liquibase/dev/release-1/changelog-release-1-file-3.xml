<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">



	<changeSet id="data-rus-31" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Delete data and sequence from table: dict_reactors</comment>
		<delete schemaName="apps"
				tableName="dict_reactors">
		</delete>
		<dropSequence schemaName="apps"
					  sequenceName="dict_reactors_s"/>
		<rollback/>
	</changeSet>


	<changeSet id="load-rus-32" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: dict_reactors</comment>
		<loadData
				encoding="UTF-8"
				relativeToChangelogFile="true"
				file="data/dict_reactors1.csv"
				quotchar='"'
				schemaName="apps"
				separator=";"
				tableName="dict_reactors">

			<column name="id" type="NUMERIC"/>
			<column name="name" type="STRING"/>
			<column name="delta_pr" type="NUMERIC"/>
			<column name="unom" type="NUMERIC"/>
			<column name="business_partner_id" type="NUMERIC"/>
			<column name="energy_object_id" type="NUMERIC"/>
			<column name="org_id" type="NUMERIC"/>
		</loadData>

		<rollback>
			<delete schemaName="apps" tableName="dict_reactors" />
		</rollback>

		<createSequence
				incrementBy="1"
				schemaName="apps"
				sequenceName="dict_reactors_s"
				startValue="79"/>
		<rollback/>
	</changeSet>


	<changeSet id="data-rus-32" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Delete data and sequence from table: info_types_by_contract</comment>
		<delete schemaName="apps"
				tableName="info_types_by_contract">
		</delete>
		<dropSequence schemaName="apps"
					  sequenceName="info_types_by_contract_s"/>
		<rollback/>
	</changeSet>


	<changeSet id="load-rus-32" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: info_types_by_contract</comment>
		<loadData
				encoding="UTF-8"
				relativeToChangelogFile="true"
				file="data/info_types_by_contract.csv"
				quotchar='"'
				schemaName="apps"
				separator=";"
				tableName="info_types_by_contract">

			<column name="id" type="NUMERIC"/>
			<column name="short_name" type="STRING"/>
			<column name="name" type="STRING"/>
		</loadData>

		<rollback>
			<delete schemaName="apps" tableName="info_types_by_contract" />
		</rollback>

		<createSequence
				incrementBy="1"
				schemaName="apps"
				sequenceName="info_types_by_contract_s"
				startValue="13"/>
		<rollback/>
	</changeSet>


</databaseChangeLog>
